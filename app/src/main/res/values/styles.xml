<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/SolidActionBar</item>
    </style>

    <!-- Action bar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>


    <style name="SolidActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/turquoise</item>
        <item name="android:actionMenuTextColor">@color/clouds</item>
        <item name="android:titleTextStyle">@style/SolidActionBarText</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="SolidActionBarText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/clouds</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Divider-->
    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/clouds</item>
    </style>

    <style name="BottomViewImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Ripple">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
